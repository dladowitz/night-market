%h1
  = @meal.category
  for
  = link_to @event.name, event_path(@event)

.row
  .col-xs-8.widget-container-col
    .widget-box.mb20
      .widget-header
        .widget-title
          %span.fsize-20
            %i.fa.fa-bar-chart
          %span.fsize-25
            Status
      .widget-body
        .widget-main
          %li Thing One
          %li Thing Two

    .widget-box.mb20
      .widget-header
        .widget-title
          %span.fsize-20
            %i.fa.fa-dollar
          %span.fsize-25
            Costs
      .widget-body
        .widget-main
          = form_for [@event, @meal], html: { class: "form-inline", role: "form" } do |f|
            .checkbox
              %label.fsize-20
                Total cost for this meal
                = f.number_field :cost, class: "width-20 ml10"
            = f.submit class: "btn btn-warning btn-sm"


    .widget-box.mb30
      .widget-header
        .widget-title
          %span.fsize-20
            %i.fa.fa-search
          %span.fsize-25
            Details
      .widget-body
        .widget-main
          = form_for [@event, @meal], html: {class: "form-inline", role: "form" } do |f|
            .checkbox
              %label.fsize-20
                Guests
                = f.number_field :guests, class: "width-20 ml10"
            .checkbox
              %label.fsize-20
                Date
                -#= f.text_field :start, type: "date", class: "input-medium"
            .checkbox
              %label.fsize-20
                Time
                -#= f.text_field :start, type: "date", class: "input-medium"
            = f.submit class: "btn btn-warning btn-sm"

%ul
  %li
    Guests:
    = @meal.guests
  %li
    Start:
    = @meal.start
  %li
    Ignore Warnings
    = @meal.ignore_warnings ? "YES" : "NO"

= link_to "All Meals", event_meals_path(@event), class: "btn btn-info"
= link_to "Dishes", event_meal_dishes_path(@event, @meal), class: "btn btn-info"
= link_to "Event", event_path(@event), class: "btn btn-primary"
= link_to "Edit", edit_event_meal_path(@event, @meal), class: "btn btn-warning"
= link_to "Delete", event_meal_path(@event, @meal), method: :delete, class: "btn btn-danger", data: { confirm: "Are you, like, for sure?" }

